<Configuration status="WARN">
<Appenders>
<!--  Console Appender  -->
<Console name="Console" target="SYSTEM_OUT">
<PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] %c{1} - %msg%n"/>
</Console>
<!--  File Appender  -->
<File name="FileLogger" fileName="logs/securerestapplogs">
<PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] %c{1} - %msg%n"/>
</File>
</Appenders>
<Loggers>
<!--  Application Logs  -->
<Logger name="com.posidex.emailservice" level="debug" additivity="false">
<AppenderRef ref="Console"/>
<AppenderRef ref="FileLogger"/>
</Logger>
<!--  Root Logger  -->
<Root level="info">
<AppenderRef ref="Console"/>
<AppenderRef ref="FileLogger"/>
</Root>
</Loggers>
</Configuration>